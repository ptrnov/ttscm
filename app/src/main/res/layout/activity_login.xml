<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootview"
    android:background="@drawable/tts_bg_mobile"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerRL"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/tts_logo_IV"
            android:src="@drawable/tts_logo"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="@string/app_name"
            android:id="@+id/appNameTV"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@+id/tts_logo_IV" />

        <TextView
            android:text="@string/app_build"
            android:id="@+id/appBuildTV"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/appNameTV" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signInRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_bg"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/footerRL"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_hint"
            android:id="@+id/loginHintLbl"
            android:textAlignment="center"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_users"
            android:id="@+id/iconperson"
            android:scaleType="centerInside"
            android:layout_below="@id/loginHintLbl"
            android:layout_gravity="center_vertical"
            android:tint="@color/md_grey_700"
            android:layout_alignBottom="@+id/input_layout_username"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_toRightOf="@+id/iconperson"
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            app:theme="@style/MyEditText"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginHintLbl">
            <EditText
                android:inputType="textAutoComplete"
                android:id="@+id/usernameET"
                android:hint="Username or Email"
                android:textColorHint="@color/md_blue_A700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:tint="@color/md_grey_700"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lock_open"
            android:id="@+id/iconlock"
            android:scaleType="centerInside"
            android:layout_below="@+id/input_layout_username"
            android:layout_alignBottom="@+id/input_layout_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_toRightOf="@+id/iconlock"
            android:layout_below="@+id/input_layout_username"
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/MyEditText"
            app:passwordToggleContentDescription="description"
            app:passwordToggleDrawable="@drawable/my_password_toggle"
            app:passwordToggleEnabled="true">

            <EditText
                android:textColorHint="@color/md_blue_A700"
                android:id="@+id/passwordET"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/loginBtn"
            android:layout_below="@+id/input_layout_password"
            android:background="@drawable/btn_default_no_radius"
            android:textColor="@color/color_white"
            android:layout_marginTop="@dimen/global_spacing_xxs"/>

    </RelativeLayout>

