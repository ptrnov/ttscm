<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timelineTitleTV"
            android:text="OPEN TICKET NO. D170001"
            android:layout_toRightOf="@+id/view_circle_start"
            android:layout_toEndOf="@+id/view_circle_start"
            style="@style/timeline_title" />
        <View style="@style/timeline_line"
            android:layout_alignBottom="@+id/timelineUserTV"/>
        <View android:id="@+id/view_circle_start"
            style="@style/timeline_point"
            android:layout_alignBottom="@+id/timelineTitleTV"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/view_circle_start">
            <TextView
                android:id="@+id/timelineTimeTV"
                android:text="10:13"
                style="@style/timeline_time"/>
            <TextView
                android:id="@+id/timelineDateTV"
                android:text="18 Feb 2017"

                style="@style/timeline_date"/>
        </LinearLayout>
        <!--<TextView
            android:id="@+id/timelineTimeTV"
            android:text="10:13"
            android:layout_above="@+id/timelineDateTV"
            style="@style/timeline_time"/>
        <TextView
            android:id="@+id/timelineDateTV"
            android:text="18 Feb 2017"
            android:layout_alignBottom="@+id/view_circle_start"
            style="@style/timeline_date"/>-->

        <TextView
            android:id="@+id/timelineDescTV"
            android:layout_toRightOf="@+id/view_circle_start"
            android:layout_toEndOf="@+id/view_circle_start"
            android:layout_below="@+id/timelineTitleTV"
            android:text="testpagi..testpagi..testpagi..testpagi..testpagi..testpagi..testpagi..testpagi..testpagi.."
            style="@style/timeline_desc" />

        <TextView
            android:id="@+id/timelineUserTV"
            style="@style/timeline_user"
            android:layout_toRightOf="@+id/view_circle_start"
            android:layout_toEndOf="@+id/view_circle_start"
            android:layout_below="@+id/timelineDescTV"
            android:text="Joko Sungkowo | Technician | Tegal IVM" />
    </RelativeLayout>

</RelativeLayout>