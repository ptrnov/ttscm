<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:clickable="true" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_home_header"
        android:id="@+id/headerHomeRL">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userInfoTV"
            android:text="@string/label_user_info"
            android:textSize="12sp"
            android:textAlignment="center"
            android:padding="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_fill_color="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userInfoTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTimeTV"
            android:text="@string/label_date_dummy"
            android:textAlignment="center"
            android:layout_below="@id/profile_image"
            android:textSize="12sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeMsgTV"
            android:text="@string/label_welcome_msg"
            android:textAlignment="center"
            android:layout_below="@id/dateTimeTV"
            android:textSize="12sp"
            android:textStyle="italic"
            android:padding="5dp"/>

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/chartSwiper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerHomeRL">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                android:id="@+id/chartTabLayout"
                android:background="@color/text_darkgreen"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/chartContentPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/chartTabLayout" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:layout_below="@id/chartSwiper"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/firstChartHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_darkgreen"
                android:padding="5dp">
                <TextView
                    android:textColor="@color/md_white_1000"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="STATUS"/>
                <TextView
                    android:textColor="@color/md_white_1000"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="SEVERITY"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/firstChart"
                android:layout_below="@id/firstChartHeader"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/md_white_1000">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/statusChart"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/severityChart"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondChartHeader"
                android:layout_below="@id/firstChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_darkgreen"
                android:padding="5dp">
                <TextView
                    android:textColor="@color/md_white_1000"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="TT OVERVIEW"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/ovAllChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="5dp"
                android:layout_below="@id/secondChartHeader"
                android:background="@color/md_white_1000"/>

            <LinearLayout
                android:id="@+id/thirdChartHeader"
                android:layout_below="@id/ovAllChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_darkgreen"
                android:padding="5dp">
                <TextView
                    android:textColor="@color/md_white_1000"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="OPEN/CLOSE OVERVIEW"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ocChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="5dp"
                android:layout_below="@id/thirdChartHeader"
                android:background="@color/md_white_1000"/>

            <ListView
                android:id="@+id/chartLV"
                android:layout_below="@id/ocChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_white_1000"
                android:visibility="gone">
            </ListView>

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>