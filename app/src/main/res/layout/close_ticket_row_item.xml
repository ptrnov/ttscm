<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_menu_state_light"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_menu_state_light">

        <View
            android:id="@+id/indicator"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/footerLayout"
            android:layout_alignParentTop="true"
            android:background="@color/color_btn_negative" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/indicator"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:focusable="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ticketNoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="DT00017 - Jakarta IVM"
                        android:textColor="@color/grey_700"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ticketStationTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:text="Jakarta IVM"
                        android:textSize="11sp"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ticketRemarksTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TV Transmitter Malfunction"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ticketCloseInfoTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:text="NATURE - LIGHTNING STRIKE - TV TRANSMITTER"
                        android:textColor="@color/grey_700"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:adjustViewBounds="true"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/ic_next"
                android:tint="@color/text_darkgreen"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/layout"
            android:layout_toRightOf="@id/indicator"
            android:background="#ffc5c5c5" />

        <RelativeLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_toRightOf="@id/indicator"
            android:background="@color/background_container"
            android:padding="5dp">

            <TextView
                android:id="@+id/ticketCloseDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create on 4 Apr 2017 17:00:00"
                android:textSize="10sp"
                android:gravity="end"/>

            <TextView
                android:id="@+id/ticketAgingTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticketCloseDateTV"
                android:layout_weight="0.2"
                android:text="3M 2D 12H 5m 20s"
                android:textSize="10sp"
                android:gravity="end"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
