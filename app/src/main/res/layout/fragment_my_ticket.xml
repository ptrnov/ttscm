<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/visualInspectionRootView">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/ticketSwiper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <include android:id="@+id/positionHeader"
                layout="@layout/position_header" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                app:tabBackground="@drawable/tab_selector"
                android:background="@color/text_darkgreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/positionHeader"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:background="#ECEFF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tabs"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>