<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/visualInspectionRootView">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/topTenSwiper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                android:id="@+id/topTenTabLayout"
                android:background="@color/text_darkgreen"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/topTenPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topTenTabLayout"
                android:background="@color/background_container"/>
        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>