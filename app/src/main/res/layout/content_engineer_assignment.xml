<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_engineer_assignment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


<com.daimajia.slider.library.SliderLayout
        android:id="@+id/photoPreviewLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@id/photoPreviewLayout"
        android:background="@color/text_darkgreen"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/contentPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_above="@+id/actionLayout"/>
    <RelativeLayout
        android:id="@+id/actionLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/footerSeparator"
            android:background="#ffc5c5c5"
            android:layout_width="fill_parent" android:layout_height="0.5dip"
            android:layout_margin="10dp" />

        <LinearLayout
            android:id="@+id/actionLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/footerSeparator"
            android:padding="5dp">

            <Button
                android:id="@+id/responseBtn"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_response"
                style="@style/default_button_2"/>

            <Button
                android:id="@+id/escalatedBtn"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_req_onsite"
                style="@style/default_negative_button"/>
            <Button
                android:id="@+id/closedBtn"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_closed"
                style="@style/default_button"/>
            <Button
                android:id="@+id/reportBtn"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_report"
                style="@style/default_button"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>