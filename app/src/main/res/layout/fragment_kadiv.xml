<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_white_1000"
    android:clickable="true" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_home_header"
        android:id="@+id/headerHomeRL">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userInfoTV"
            android:text="@string/label_user_info"
            android:textAlignment="center"
            android:padding="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_fill_color="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userInfoTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTimeTV"
            android:text="@string/label_date_dummy"
            android:textAlignment="center"
            android:layout_below="@id/profile_image"
            android:textSize="12sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeMsgTV"
            android:text="@string/label_welcome_msg"
            android:textAlignment="center"
            android:layout_below="@id/dateTimeTV"
            android:textSize="12sp"
            android:textStyle="italic"
            android:padding="5dp"/>

    </RelativeLayout>

    <!--android:visibility="gone"-->
    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerHomeRL"
        android:layout_above="@+id/homeMenuRVContainer"
        android:background="@color/color_home_header">
        <LinearLayout
            android:id="@+id/widgetOpenClose"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/openTicketRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/global_spacing_xxs"
                    android:background="@color/md_red_600"
                    android:layout_marginRight="5dip">
                    <ImageView
                        android:id="@+id/openIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_tt_act"
                        android:tint="@color/color_white"/>
                    <TextView
                        android:id="@+id/openTitle"
                        android:layout_toRightOf="@id/openIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OPEN TICKET"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/openKadivTV"
                        android:layout_toRightOf="@id/openIcon"
                        android:layout_below="@id/openTitle"
                        android:layout_alignBottom="@id/openIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/closeTicketRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/global_spacing_xxs"
                    android:background="@color/md_green_600">
                    <ImageView
                        android:id="@+id/closeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_yes"
                        android:tint="@color/color_white"/>
                    <TextView
                        android:id="@+id/closeTitle"
                        android:layout_toRightOf="@id/closeIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CLOSE TICKET"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/closeKadivTV"
                        android:layout_toRightOf="@id/closeIcon"
                        android:layout_below="@id/closeTitle"
                        android:layout_alignBottom="@id/closeIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip">
                <RelativeLayout
                    android:id="@+id/criticalRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:padding="@dimen/global_spacing_xxs"
                    android:background="@color/md_red_600"
                    android:layout_marginRight="5dip">
                    <TextView
                        android:id="@+id/criticalTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CRITICAL"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/criticalKadivTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_below="@id/criticalTitle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/majorRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:padding="@dimen/global_spacing_xxs"
                    android:background="@color/md_orange_600"
                    android:layout_marginRight="5dip">
                    <TextView
                        android:id="@+id/majorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MAJOR"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/majorKadivTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_below="@id/majorTitle" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/minorRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:padding="@dimen/global_spacing_xxs"
                    android:background="@color/md_yellow_600">
                    <TextView
                        android:id="@+id/minorTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MINOR"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/minorKadivTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_below="@id/minorTitle" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/acnRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dip"
                    android:background="@color/md_light_blue_700"
                    android:layout_marginRight="5dip">
                    <ImageView
                        android:id="@+id/acnIcon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ac_nielsen"
                        android:tint="@color/color_white"/>
                    <TextView
                        android:id="@+id/acnTitle"
                        android:layout_toRightOf="@id/acnIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AC NIELSEN DOWNTIME"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/acnTV"
                        android:layout_toRightOf="@id/acnIcon"
                        android:layout_below="@id/acnTitle"
                        android:layout_alignBottom="@id/acnIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/nacnRL"
                    android:clickable="true"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dip"
                    android:background="@color/md_light_green_700">
                    <ImageView
                        android:id="@+id/nacnIcon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_non_ac_nielsen"
                        android:tint="@color/color_white"/>
                    <TextView
                        android:id="@+id/nacnTitle"
                        android:layout_toRightOf="@id/nacnIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N-AC NIELSEN DOWNTIME"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/nacnTV"
                        android:layout_toRightOf="@id/nacnIcon"
                        android:layout_below="@id/nacnTitle"
                        android:layout_alignBottom="@id/nacnIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/homeMenuRVContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:visibility="visible">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/homeMenuRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_margin="2dp"
            android:fadeScrollbars="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollIndicators="none"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/homeMenuRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>-->

</RelativeLayout>